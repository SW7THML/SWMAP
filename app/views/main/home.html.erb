<% @profiles.each_slice(12) do |p_row| %>
	<div class="section_row">
		<% p_row.each do |p| %>
			<% if p != :pillar %>
				<div class="section" style="display: inline">
					<% if @highlights.include?(p) %>
						<strong><%= link_to p.name, profile_path(p) %></strong>
					<% else %>
						<%= link_to p.name, profile_path(p) %>
					<% end %>
				</div>
			<% else %>
				<div class="section" style="display: inline">
					<%= p.to_s %>
				</div>
			<% end %>
		<% end %>
	</div>
<% end %>

<hr/>


<%= form_tag :root, method: 'get', class: 'form-inline' do %>
	<div class="form-group">
		<%= label_tag :query, "연수생 찾기" %>
		<%= text_field_tag :query, params[:query], class: "form-control" %>
	</div>

	<%= submit_tag "Search", class: 'btn btn-primary' %>
<% end %>

