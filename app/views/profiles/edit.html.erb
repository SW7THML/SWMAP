<%= form_for(@profile, html: {multipart: true}) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control", :disabled => true %>
  </div>
  <div class="form-group">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :facebook %>
    <%= f.text_field :facebook, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :twitter %>
    <%= f.text_field :twitter, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :github %>
    <%= f.text_field :github, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :blog %>
    <%= f.text_field :blog, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :tags %>
    <button type="button" class="btn btn-link" data-toggle="modal" data-target="#tag-modal">
    +
    </button>
    <div class="form-group">
      <% @profile.tags.each_with_index do |tag, index| %>
        <div class="tag">
          <div class="tag-color" style="background-color: <%= tag.color %>">
          </div>
          <%= tag.name %>
          <%= link_to "x", profile_tag_path(@profile, tag), method: :delete , class: "tag-remove"%>
        </div>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :avatar %>
    <%= f.hidden_field :avatar_cache %>
		<%= f.file_field :avatar, :class => "form-control" %>
		<% if @profile.avatar.present? %>
			<h5>* 이전 이미지</h5>
			<%= image_tag @profile.avatar.url(:standard) %>
		<% end %>
  </div>

  <div class="text-right">
    <%= link_to "취소", :root, class: 'btn btn-default btn-lg' %>
	  <button type="submit" class="btn btn-primary btn-lg">변경</button>
  </div>
<% end %>


<%= render 'tag_modal' %>